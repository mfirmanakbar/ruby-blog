
<%= render 'shared/errors', obj: @art %>

<div class="row">
  <div class="col-lg-12">
    <!-- panel -->
    <div class="card">
      <div class="card-header">
        Form Input
      </div>
      <div class="card-body">

        <%# @art here from controller to set in every field into the form %>
        <%= form_for @art do |f| %>

          <div class="form-group row">
            <label class="col-sm-2 col-form-label">
              <%= f.label :title %>
            </label>
            <div class="col-sm-10">
              <%= f.text_field :title, class: "form-control", placeholder: "title of article ...", autofocus: true%>
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-2 col-form-label">
              <%= f.label :description %>
            </label>
            <div class="col-sm-10">
              <%= f.text_area :description, class: "form-control", rows: 6, placeholder: "title of article ...", autofocus: true%>
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-2 col-form-label">
            </label>
            <div class="left col-sm-10">
              <%= f.submit class:"btn btn-success" %>
              <%= link_to 'Back to Article List', articles_path, class: "btn btn-outline-info" %>              
            </div>
          </div>

        <% end %>


      </div>
    </div>

  </div>
</div>
